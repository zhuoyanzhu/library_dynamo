extends layout

block content
  img(src=user.picture)
  h2 Welcome #{user.nickname}!
  br
  a(href='/logout') Logout
  
  head
    title
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='css/bootstrap.min.css', rel='stylesheet')
    script(src='js/jquery.min.js')
    script(src='js/bootstrap.min.js')
  style.
    .row {
    margin-bottom: 15px;
    }
  body
    .container
      h1.title.text-center Borrow / Return
      .form-group
        .row.text-center
          label(for='sn') Student Name
          |  
          input#sn(type='text', required='')
        .row.text-center  Please Input books&apos;ID or name
        .row.text-center
          label(for='bn') Book Name
          |  
          input#bn(type='text', required='')
        .row.text-center
          label(for='bi') Book ID
          |  
          input#bi(type='text', required='')
      .row.text-center
        button#return.btn.btn-default(type='button') Return Book
        |  
        button#borrow.btn.btn-default(type='button') Borrow Book
    script(src='js/deal-page.js')


